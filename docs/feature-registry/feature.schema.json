{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Apfood Feature Registry",
  "type": "object",
  "properties": {
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "area", "status", "since"],
        "properties": {
          "key": { "type": "string", "pattern": "^[A-Za-z0-9_.-]+$" },
          "area": { "type": "string" },
          "since": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["draft", "in-progress", "shipped", "deprecated"]
          },
          "owner": { "type": "string" },
          "entrypoints": { "type": "array", "items": { "type": "string" } },
          "tests": { "type": "array", "items": { "type": "string" } },
          "dod": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "provenance": {
            "type": "object",
            "properties": {
              "source": { "type": "string" },
              "last_verified": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["features"],
  "additionalProperties": false
}
